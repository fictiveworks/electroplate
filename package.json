{
  "name": "electroplate",
  "version": "0.5.0",
  "description": "UI kit for Electron/Chromium-based desktop apps",
  "repository": {
    "type": "git",
    "url": "https://github.com/fictiveworks/electroplate"
  },
  "type": "module",
  "main": "components.js",
  "module": "components.js",
  "scripts": {
    "build": "sass --style compressed ui/electroplate.scss ui.css",
    "start": "run-all 'npm run preview:server' 'npm run preview:watcher'",
    "preview:server": "snowpack dev",
    "preview:watcher": "sass --watch docs/preview.scss docs/assets/preview.css"
  },
  "author": "Mark Rickerby <me@maetl.net> (https://maetl.net)",
  "license": "MIT",
  "devDependencies": {
    "run-all": "^1.0.1",
    "sass": "^1.32.8",
    "snowpack": "^3.8.8"
  }
}
